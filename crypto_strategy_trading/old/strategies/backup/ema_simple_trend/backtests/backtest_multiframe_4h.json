{
  "backtest_name": "EMA简单趋势策略 - 多时间框架版（4小时优化） - 6个月",
  "description": "4小时EMA21判断趋势 + 1小时入场 + 2.7倍杠杆 - 更灵活的趋势过滤",
  
  "data": {
    "source": "backtest/data/ETHUSDT-1h-6months.csv",
    "timeframe": "1h",
    "resample_from": "1h"
  },
  
  "strategy": {
    "name": "ema_simple_trend_multiframe",
    "config_file": "strategies/ema_simple_trend/config_multiframe_4h.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 250,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/ema_simple_trend_multiframe_4h_6months_result_{timestamp}.json",
    "report_file": "results/ema_simple_trend_multiframe_4h_6months_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

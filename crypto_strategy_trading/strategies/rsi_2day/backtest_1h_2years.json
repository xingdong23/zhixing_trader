{
  "backtest_name": "2日RSI策略 - 原版 - 1小时 - 2年",
  "description": "基于拉里·威廉姆斯的极短期RSI策略，使用2年1小时数据验证长期表现",
  
  "data": {
    "source": "backtest/data/ETHUSDT-1h-2years.csv",
    "timeframe": "1h",
    "resample_from": "1h"
  },
  
  "strategy": {
    "name": "rsi_2day",
    "config_file": "strategies/rsi_2day/config.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 250,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/rsi_2day_1h_2years_result_{timestamp}.json",
    "report_file": "results/rsi_2day_1h_2years_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

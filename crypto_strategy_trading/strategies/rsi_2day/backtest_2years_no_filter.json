{
  "backtest_name": "2日RSI策略 - 无趋势过滤 - 4小时 - 2年",
  "description": "测试无趋势过滤版本在2年数据上的表现",
  
  "data": {
    "source": "backtest/data/ETHUSDT-4h-2years-new.csv",
    "timeframe": "4h",
    "resample_from": "4h"
  },
  
  "strategy": {
    "name": "rsi_2day",
    "config_file": "strategies/rsi_2day/config_no_filter.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 250,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/rsi_2day_no_filter_4h_2years_result_{timestamp}.json",
    "report_file": "results/rsi_2day_no_filter_4h_2years_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

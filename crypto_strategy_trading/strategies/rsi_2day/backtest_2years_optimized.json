{
  "backtest_name": "2日RSI策略 - 优化版 - 4小时 - 2年",
  "description": "优化RSI阈值，使用2年数据验证长期表现",
  
  "data": {
    "source": "backtest/data/ETHUSDT-4h-2years-new.csv",
    "timeframe": "4h",
    "resample_from": "4h"
  },
  
  "strategy": {
    "name": "rsi_2day",
    "config_file": "strategies/rsi_2day/config_optimized.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 250,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/rsi_2day_optimized_4h_2years_result_{timestamp}.json",
    "report_file": "results/rsi_2day_optimized_4h_2years_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

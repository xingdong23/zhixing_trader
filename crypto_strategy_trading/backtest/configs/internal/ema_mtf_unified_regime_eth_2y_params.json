{
  "backtest_name": "EMA MTF Unified Regime - ETHUSDT 1h 2Y 参数集",
  "description": "统一多空 + Regime 策略参数，基于原多头高收益参数做保守扩展，确保有交易产出且风险可控。",
  "parameters": {
    "total_capital": 1000,
    "leverage": 2.5,
    "max_risk_per_trade": 0.015,
    "max_daily_drawdown": 0.15,

    "use_dynamic_leverage": true,
    "min_leverage": 1.0,
    "max_leverage": 4.0,
    "leverage_increase_step": 0.4,
    "leverage_decrease_step": 0.8,
    "leverage_after_drawdown": 1.0,

    "position_size": 0.5,
    "use_volatility_position_sizing": true,
    "atr_period": 14,
    "min_position_size": 0.2,
    "max_position_size": 0.9,

    "ema_fast": 5,
    "ema_medium": 13,
    "ema_slow": 21,

    "use_daily_trend_filter": true,
    "daily_ema_period": 21,
    "daily_data_file": "backtest/data/ETHUSDT-1d-ALL.csv",

    "trend_strength_filter": true,
    "ema_slope_threshold": 0.00003,
    "ema_band_distance_min": 0.0008,

    "stop_loss_pct": 0.025,
    "take_profit_pct": 0.18,
    "partial_take_profit_pct": 0.05,

    "use_atr_stop": true,
    "atr_stop_multiplier": 2.0,
    "atr_tp_multiplier": 4.0,

    "use_trailing_stop": true,
    "trailing_stop_activation": 0.05,
    "trailing_stop_distance": 0.03,

    "use_trailing_take_profit": true,
    "trailing_take_profit_activation": 0.06,
    "trailing_take_profit_distance": 0.025,

    "volume_confirmation": false,
    "volume_multiplier": 1.05,

    "regime_mode": "hybrid",
    "regime_band_pct": 0.01,
    "bull_confirm_bars": 0,
    "bear_confirm_bars": 3,
    "exit_on_regime_flip": true,

    "allow_long": true,
    "allow_short": true,

    "neutral_trade_mode": "no_trade",

    "min_rr_ratio": 1.6,
    "min_rr_ratio_short": 1.8,
    "max_risk_per_trade_short": 0.0105,
    "leverage_short": 2.0,
    "min_distance_from_low": 0.005
  }
}
{
  "backtest_name": "EMA MTF Unified Regime - ETHUSDT 1h 2Y 优化参数",
  "description": "统一多空 + Regime 过滤版本，基于原高收益参数，在牛市主做多、熊市择优做空，中性区收紧。",
  "exchange": "binance",
  "symbol": "ETHUSDT",
  "timeframe": "1h",
  "data": {
    "source": "backtest/data/ETHUSDT-1h-ALL.csv",
    "timeframe": "1h",
    "resample_from": null
  },
  "backtest_settings": {
    "initial_capital": 1000,
    "slippage": 0.0005,
    "taker_fee": 0.0004,
    "maker_fee": 0.0002,
    "window_size": 500
  },
  "strategy": {
    "name": "ema_simple_trend_multiframe",
    "config_file": "backtest/configs/ema_simple_trend_multiframe_optimized_params_high_return.json",
    "parameters": {
      "total_capital": 1000,
      "leverage": 2.5,
      "max_risk_per_trade": 0.015,
      "max_daily_drawdown": 0.15,
      "use_dynamic_leverage": true,
      "min_leverage": 1.0,
      "max_leverage": 4.0,
      "leverage_increase_step": 0.4,
      "leverage_decrease_step": 0.8,
      "leverage_after_drawdown": 1.0,

      "position_size": 0.5,
      "use_volatility_position_sizing": true,
      "atr_period": 14,
      "min_position_size": 0.2,
      "max_position_size": 0.9,

      "ema_fast": 5,
      "ema_medium": 13,
      "ema_slow": 21,
      "use_daily_trend_filter": true,
      "daily_ema_period": 21,
      "daily_data_file": "backtest/data/ETHUSDT-1d-ALL.csv",

      "trend_strength_filter": true,
      "ema_slope_threshold": 0.00003,
      "ema_band_distance_min": 0.0008,
      "min_rr_ratio": 1.6,
      "reentry_cooldown": 2,

      "stop_loss_pct": 0.025,
      "take_profit_pct": 0.18,
      "partial_take_profit_pct": 0.05,
      "use_atr_stop": true,
      "atr_stop_multiplier": 2.0,
      "atr_tp_multiplier": 4.0,

      "use_trailing_stop": true,
      "trailing_stop_activation": 0.05,
      "trailing_stop_distance": 0.03,
      "use_trailing_take_profit": true,
      "trailing_take_profit_activation": 0.06,
      "trailing_take_profit_distance": 0.025,
      "use_ema_exit": false,

      "volume_confirmation": false,
      "volume_multiplier": 1.05,
      "regime_mode": "hybrid",
      "regime_band_pct": 0.01,
      "bull_confirm_bars": 0,
      "bear_confirm_bars": 3,
      "exit_on_regime_flip": true,
      "allow_long": true,
      "allow_short": true,
      "min_rr_ratio_short": 1.8,
      "max_risk_per_trade_short": 0.0105,
      "leverage_short": 2.0,
      "min_distance_from_low": 0.005,
      "neutral_trade_mode": "long_only_strict"
    }
  },
  "output": {
    "save_trades": true,
    "save_equity_curve": true,
    "result_dir": "crypto_strategy_trading/backtest/results",
    "result_file_prefix": "ema_mtf_unified_regime_eth_2y"
  }
}

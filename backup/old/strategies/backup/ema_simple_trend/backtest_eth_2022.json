    "strategy": {
        "name": "ema_simple_trend",
        "config_file": "strategies/ema_simple_trend/config.json",
        "parameters": {
            "total_capital": 300.0,
            "leverage": 1.0,
            "daily_data_file": "backtest/data/ETHUSDT-1d-ALL.csv",
            "position_size": 1.0,
            "ema_fast": 5,
            "ema_medium": 13,
            "ema_slow": 21,
            "use_daily_trend_filter": true,
            "daily_ema_period": 21,

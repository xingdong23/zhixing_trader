{
    "backtest_name": "EMA Simple Trend ETH 2022",
    "description": "Backtest for EMA Simple Trend on ETH (2022 Bear Market)",
    "exchange": {
        "name": "binance",
        "fee_rate": 0.0005
    },
    "backtest_settings": {
        "initial_capital": 300.0,
        "window_size": 300,
        "maker_fee": 0.0002,
        "taker_fee": 0.0005

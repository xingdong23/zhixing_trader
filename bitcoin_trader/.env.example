# Bitcoin Trader 环境配置示例
# 复制此文件为 .env 并填入实际值

# ==================== 应用配置 ====================
APP_NAME=BitcoinTrader
APP_ENV=development
DEBUG=True
API_PORT=8001

# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=bitcoin_trader

# ==================== Redis配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# ==================== Binance 配置 ====================
# 获取方式: https://www.binance.com/zh-CN/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=True  # True=测试网, False=主网

# ==================== OKX 配置 ====================
# 获取方式: https://www.okx.com/account/my-api
# 注意: 需要设置 Passphrase（API密码）
OKX_API_KEY=your_okx_api_key
OKX_API_SECRET=your_okx_api_secret
OKX_PASSPHRASE=your_okx_passphrase
OKX_TESTNET=True  # True=模拟盘, False=实盘

# ==================== 交易配置 ====================
DEFAULT_EXCHANGE=okx  # binance, okx
DEFAULT_SYMBOL=BTC/USDT
MAX_POSITION_SIZE=1000.0
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=5.0

# ==================== 策略配置 ====================
STRATEGY_NAME=steady_profit
ENABLE_BACKTEST=True
ENABLE_LIVE_TRADING=False  # 谨慎开启！

# ==================== 日志配置 ====================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_DIR=logs

# ==================== 告警配置 ====================
ENABLE_ALERT=False
ALERT_EMAIL=your_email@example.com
ALERT_WEBHOOK=

# ============================================================
# 模拟盘配置文件
# 使用前请复制为 .env 并填入真实配置
# ============================================================

# ============================================================
# 欧易API配置
# ============================================================
OKX_API_KEY=your_api_key_here
OKX_SECRET_KEY=your_secret_key_here
OKX_PASSPHRASE=your_passphrase_here
OKX_BASE_URL=https://www.okx.com

# ============================================================
# 数据库配置
# ============================================================
DB_TYPE=sqlite  # sqlite 或 mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=trading_paper

# SQLite配置（如果使用SQLite）
SQLITE_DB_PATH=./paper_trading.db

# ============================================================
# 模拟盘配置
# ============================================================
INITIAL_BALANCE=300
LEVERAGE=2.7
POSITION_SIZE=0.85
STOP_LOSS_PCT=0.032
TAKE_PROFIT_PCT=0.07

# 交易对
SYMBOL=ETH-USDT-SWAP
TIMEFRAME=1H

# 手续费配置
TAKER_FEE=0.0005  # 0.05%
MAKER_FEE=0.0002  # 0.02%
SLIPPAGE=0.0001   # 0.01%

# ============================================================
# 策略配置
# ============================================================
STRATEGY_NAME=ema_simple_trend_multiframe
STRATEGY_CONFIG=../app/strategies/ema_simple_trend/config_multiframe.json
DAILY_DATA_FILE=../data/ETHUSDT-1d-from1h.csv

# ============================================================
# 运行配置
# ============================================================
# 检查间隔（秒）
CHECK_INTERVAL=300  # 5分钟检查一次持仓
SIGNAL_CHECK_INTERVAL=3600  # 1小时检查一次信号

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/paper_trading.log

# ============================================================
# 通知配置（可选）
# ============================================================
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# 企业微信通知（可选）
WECHAT_ENABLED=false
WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx

# ============================================================
# 监控配置
# ============================================================
WEB_PORT=8888
WEB_HOST=0.0.0.0

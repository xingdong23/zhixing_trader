{
  "backtest_name": "EMA简单趋势策略 - 双向交易版 - 1小时 - 2年",
  "description": "2.7倍杠杆 + 85%仓位 + 允许做空",
  
  "data": {
    "source": "data/ETHUSDT-1h-2years.csv",
    "timeframe": "1h",
    "resample_from": "1h"
  },
  
  "strategy": {
    "name": "ema_simple_trend",
    "config_file": "../app/strategies/ema_simple_trend/config_bidirectional.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 250,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/ema_simple_trend_bidirectional_1h_2years_result_{timestamp}.json",
    "report_file": "results/ema_simple_trend_bidirectional_1h_2years_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

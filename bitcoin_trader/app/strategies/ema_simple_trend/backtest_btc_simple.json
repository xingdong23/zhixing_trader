{
  "backtest_name": "BTC - EMA简单趋势策略 - 6个月",
  "description": "BTC使用EMA简单趋势策略 (原版，只做多)",
  "data": {
    "source": "data/BTCUSDT-1h-6months.csv",
    "timeframe": "1h",
    "resample_from": "1h"
  },
  "strategy": {
    "name": "ema_simple_trend",
    "config_file": "../app/strategies/ema_simple_trend/config.json"
  },
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 250,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  "output": {
    "result_file": "results/btc_simple_6m_result_{timestamp}.json",
    "report_file": "results/btc_simple_6m_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}
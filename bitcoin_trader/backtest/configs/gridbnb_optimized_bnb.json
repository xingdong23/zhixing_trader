{
  "backtest_name": "GridBNB优化版回测 (BNB/USDT - 2.5个月)",
  "description": "BNB/USDT 优化参数 + 欧易手续费 + 300U本金 (2.5个月数据)",
  
  "data": {
    "source": "backtest/data/BNBUSDT-5m-6months.csv",
    "timeframe": "5m",
    "resample_from": "5m"
  },
  
  "strategy": {
    "name": "gridbnb_usdt",
    "config_file": "../app/config/gridbnb_okx_optimized.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 200,
    "taker_fee_rate": 0.001,
    "maker_fee_rate": 0.0008,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/gridbnb_optimized_bnb_{timestamp}.json",
    "report_file": "results/gridbnb_optimized_bnb_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

{
  "backtest_name": "趋势突破策略回测 (ETH/USDT - 优化版)",
  "description": "趋势突破策略 300U - 6个月回测 (50%仓位，优化止损)",
  
  "data": {
    "source": "backtest/data/ETHUSDT-5m-6months.csv",
    "timeframe": "5m",
    "resample_from": "5m"
  },
  
  "strategy": {
    "name": "trend_breakout",
    "config_file": "../app/config/trend_breakout.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 200,
    "taker_fee_rate": 0.001,
    "maker_fee_rate": 0.0008,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/aggressive_trend_eth_{timestamp}.json",
    "report_file": "results/aggressive_trend_eth_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

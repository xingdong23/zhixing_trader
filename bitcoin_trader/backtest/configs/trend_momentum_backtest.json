{
  "backtest_name": "趋势动量策略回测",
  "description": "ETH/USDT 趋势动量策略历史数据回测 - 基于EMA21/55趋势和RSI14动量",
  
  "data": {
    "source": "data/ETHUSDT-1h-2years.csv",
    "timeframe": "1h",
    "resample_from": "1h"
  },
  
  "strategy": {
    "name": "trend_momentum",
    "config_file": "../app/config/trend_momentum.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 100,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/trend_momentum_result_{timestamp}.json",
    "report_file": "results/trend_momentum_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

{
  "backtest_name": "EMA简单趋势策略 - 1小时 - 22个月",
  "description": "EMA5/13/21趋势跟随，突破EMA13做多，跌破EMA21出场（1小时周期，22个月数据）",
  
  "data": {
    "source": "data/ETHUSDT-5m-merged.csv",
    "timeframe": "1h",
    "resample_from": "5m"
  },
  
  "strategy": {
    "name": "ema_simple_trend",
    "config_file": "../app/config/ema_simple_trend.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 100,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/ema_simple_trend_1h_22m_result_{timestamp}.json",
    "report_file": "results/ema_simple_trend_1h_22m_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

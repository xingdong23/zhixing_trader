{
  "backtest_name": "高频策略回测",
  "description": "ETH/USDT 高频短线策略历史数据回测",
  
  "data": {
    "source": "data/ETHUSDT-1h.csv",
    "timeframe": "1h",
    "resample_from": "1h"
  },
  
  "strategy": {
    "name": "trend_following",
    "config_file": "../app/config/trend_following.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 200,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/backtest_result_{timestamp}.json",
    "report_file": "results/backtest_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

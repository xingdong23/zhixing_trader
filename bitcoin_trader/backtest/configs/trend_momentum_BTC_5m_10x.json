{
  "backtest_name": "趋势动量策略 - BTC 5分钟 10倍杠杆",
  "description": "BTC/USDT 趋势动量策略 5分钟周期 10倍杠杆 - 激进型",
  
  "data": {
    "source": "data/BTCUSDT-5m-merged.csv",
    "timeframe": "5m",
    "resample_from": "5m"
  },
  
  "strategy": {
    "name": "trend_momentum",
    "config_file": "../app/config/trend_momentum.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 100,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/trend_momentum_BTC_5m_10x_{timestamp}.json",
    "report_file": "results/trend_momentum_BTC_5m_10x_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

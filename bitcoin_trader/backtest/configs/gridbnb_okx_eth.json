{
  "backtest_name": "GridBNB-OKX配置回测 (ETH/USDT)",
  "description": "ETH/USDT 欧易手续费 + 300U本金回测 (2个月)",
  
  "data": {
    "source": "backtest/data/ETHUSDT-5m-2months.csv",
    "timeframe": "5m",
    "resample_from": "5m"
  },
  
  "strategy": {
    "name": "gridbnb_usdt",
    "config_file": "../app/config/gridbnb_okx.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 200,
    "taker_fee_rate": 0.001,
    "maker_fee_rate": 0.0008,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/gridbnb_okx_eth_{timestamp}.json",
    "report_file": "results/gridbnb_okx_eth_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

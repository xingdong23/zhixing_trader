{
  "backtest_name": "趋势动量策略回测 - 1天",
  "description": "ETH/USDT 趋势动量策略 1天周期回测 - 使用Heikin-Ashi",
  
  "data": {
    "source": "data/ETHUSDT-1h-2years.csv",
    "timeframe": "1d",
    "resample_from": "1h"
  },
  
  "strategy": {
    "name": "trend_momentum",
    "config_file": "../app/config/trend_momentum.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 100,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/trend_momentum_1d_result_{timestamp}.json",
    "report_file": "results/trend_momentum_1d_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

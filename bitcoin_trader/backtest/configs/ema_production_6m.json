{
  "backtest_name": "EMA趋势策略 - 生产版 - 6个月回测",
  "description": "平衡风控与收益，月收10-15U，回撤<20%",
  
  "data": {
    "source": "data/ETHUSDT-5m-6months.csv",
    "timeframe": "1h",
    "resample_from": "5m"
  },
  
  "strategy": {
    "name": "ema_crossover",
    "config_file": "../app/config/ema_production.json"
  },
  
  "backtest_settings": {
    "initial_capital": 300.0,
    "window_size": 250,
    "taker_fee_rate": 0.0005,
    "maker_fee_rate": 0.0002,
    "slippage_rate": 0.0001
  },
  
  "output": {
    "result_file": "results/ema_phase1_balanced_safe_1h_6m_result_{timestamp}.json",
    "report_file": "results/ema_phase1_balanced_safe_1h_6m_report_{timestamp}.txt",
    "save_trades": true,
    "save_equity_curve": true
  }
}

